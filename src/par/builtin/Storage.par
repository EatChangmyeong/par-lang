type Error = String.String

type PathInfo = box choice {
  .name => String.String,
  .absolute => String.String,
}

type FileInfo = box choice {
  .path => PathInfo,
  .size => Nat.Nat,
  .readUTF8 => Result.Result<String.Reader<Error>, Error>,
}

type DirInfo = recursive box choice {
  .path => PathInfo,
  .list => Result.Result<List.List<either {
    .file FileInfo,
    .dir self,
  }>, Error>,
}
