type Result<a> = either {
  .ok a,
  .err String.String,
}

type PathInfo = box choice {
  .name => String.String,
  .absolute => String.String,
}

type FileInfo = box choice {
  .path => PathInfo,
  .size => Nat.Nat,
  //.readUTF8 => Result<String.Reader<Result<!>>>,
}

type DirInfo = recursive box choice {
  .path => PathInfo,
  .list => Result<List.List<either {
    .file FileInfo,
    .dir self,
  }>>,
}
