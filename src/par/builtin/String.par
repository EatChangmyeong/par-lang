type Builder = iterative choice {
  .add(String) => self,
  .build => String,
}

type Reader = recursive either {
  .empty!,
  .some iterative/attempt choice {
    .close => !,
    .remainder => String,
    .char => (Char.Char) self,
    .match(Pattern) => either {
      .fail self/attempt,
      .match(String) self,
    }
  }
}

type Pattern = recursive either {
  .s String,
  .seq(self) self,
  .and(self) self,
  .or(self) self,
  .star self,
  .plus self,
  .times(Nat.Nat) self,
}
